<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.menu_scene.MenuSceneFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewMoney"
        android:layout_width="@dimen/_32dp"
        android:layout_height="@dimen/_32dp"
        android:src="@drawable/coin"
        android:layout_marginEnd="@dimen/_8dp"
        app:layout_constraintTop_toTopOf="@id/textViewMoney"
        app:layout_constraintEnd_toStartOf="@id/textViewMoney"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_64dp"
        android:layout_marginEnd="@dimen/_32dp"
        android:text="100"
        android:textSize="@dimen/_22sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="@dimen/_196dp"
        android:layout_height="@dimen/_196dp"
        android:background="@drawable/background_logo"
        android:src="@drawable/logo"
        android:padding="@dimen/_16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonPlay"
        android:layout_width="@dimen/_196dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imageViewLogo"
        android:background="@drawable/button"
        android:layout_marginTop="@dimen/_8dp"
        android:text="@string/button_play"
        android:textColor="@color/white"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/buttonPrivacyPolicy"
        android:layout_width="@dimen/_64dp"
        android:layout_height="@dimen/_64dp"
        android:layout_margin="@dimen/_32dp"
        android:background="@drawable/background_logo"
        android:src="@drawable/privacy_policy"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>